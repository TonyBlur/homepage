{
  "compilerOptions": {
    /* 基本选项 */
    "target": "es2016",
    "lib": ["ESNext", "dom", "dom.iterable", "scripthost"],
    
    /* 模块选项 */
    "module": "esnext",
    "moduleResolution": "node",
    
    /* 互操作性选项 */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* 类型检查选项 */
    "strict": true,
    "skipLibCheck": true
  }
}
